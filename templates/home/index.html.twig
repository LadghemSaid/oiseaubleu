                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                        <button class="btn btn-danger btn-circle" ><i class="fa fa-trash"></i></button>
                                                    </form>
                                                </div>
                                            {% elseif is_granted('ROLE_USER') %}
