    <div class="mt-md-5 mt-sm-2 mb-md-5 mb-sm-2 text-center">
        <h1>L'article à la une </h1>
    </div>



        {% for key in articlesByCat|keys %}
            {% if articlesByCat[key] | length == 0 %}

            {% else %}
                <div class="row">
                    <div class="headings col-md-12">
                        <h2 class="title">{{ key }}</h2>
                        <span class="hr"></span>
                        <a href="#" class="btn btn-primary btn-lg">Voir tout</a>
                    </div>

                    <div class="slick_cat col-md-12">
                        {% for article in articlesByCat[key] %}
                            <div class="column">
                                <div class="demo-title">Normal</div>
                                <!-- Post-->
                                <div class="post-module">
                                    <!-- Thumbnail-->
                                    <div class="thumbnail">
                                        <div class="date">
                                            <div class="day">27</div>
                                            <div class="month">Mar</div>
                                        </div><img class="lazyload" src="{{ asset("img/lowres.png") }}" data-src={{ article.image }} alt="AlternateText" /></div>
                                    <!-- Post Content-->
                                    <div class="post-content">
                                        <div class="category">{{ article.categorie.first() }}</div>
                                        <h1 class="title">{{ article.title }}</h1>
                                        <h2 class="sub_title">The city that never sleeps.</h2>
                                        <p class="description">N{{ article.description|length > 100 ? article.description|slice(0, 100) ~ '...' : article.description }}</p>
                                        <div class="post-meta"><span class="timestamp"><i class="fa fa-clock-"></i> {{ article.createdAt| ago }}</span><span class="comments"><i class="fa fa-comments"></i><a href="#"> 39 comments</a></span></div>
                                        <div class="row flex-fill">
                                            <div class="col-12 d-flex justify-content-center">
                                                <a class="btn btn-primary d-flex align-items-center"
                                                   href="{{ path('article.show',{slug:article.slug,id: article.id}) }}">Voir</a>
                                            </div>
                                            <div class="col-12 mt-2 d-flex justify-content-center">
                                                {{ msalsas_voting_widget.shakeIt(article.id) }}
                                            </div>
                                            {% if is_granted('ROLE_ADMIN') %}
