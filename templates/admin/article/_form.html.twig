<div class="row">

    <div class="col-md-12">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.image) }}
        {{ form_row(form.description) }}
        {{ form_row(form.text) }}

        <div class="row d-flex align-items-center">
            <div class="col-md-6"> {{ form_row(form.status) }}</div>
            <div class="col-md-6"> {{ form_row(form.categorie) }}</div>
        </div>

        <button class="btn btn-primary btn-block ">{{ button|default('Enregistrer') }}</button>

    </div>


    {{ form_end(form) }}
</div>
