<div class="row">

    <div class="col-md-8">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}

        <div class="row">
            <div class="col-md-6">  {{ form_row(form.address) }}</div>
            <div class="col-md-4"> {{ form_row(form.city) }}</div>
            <div class="col-md-2">  {{ form_row(form.postal_code) }}</div>
        </div>
        {{ form_row(form.image) }}
    </div>
    <div class="col-md-4">
        <div class="row d-flex align-items-center">
            <div class="col-md-4"> {{ form_row(form.price) }}</div>
            <div class="col-md-4"> {{ form_row(form.sold) }}</div>
            <div class="col-md-4"> {{ form_row(form.surface) }}</div>
        </div>

        <div class="row d-flex align-items-center">
            <div class="col-md-4"> {{ form_row(form.rooms) }}</div>
            <div class="col-md-4"> {{ form_row(form.bedrooms) }}</div>
            <div class="col-md-4">  {{ form_row(form.floor) }}</div>
        </div>
        <div class="row d-flex align-items-center">
            <div class="col-md-4"> {{ form_row(form.heat) }}</div>
            <div class="col-md-4"> {{ form_row(form.type) }}</div>
            <div class="col-md-4"> {{ form_row(form.garage) }}</div>
        </div>


    </div>
    <button class="btn btn-primary ">{{ button|default('Enregistrer') }}</button>
    {{ form_end(form) }}
</div>