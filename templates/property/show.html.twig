{% extends 'base.html.twig' %}
{% block title %}
    Voir un bien!
{% endblock %}

{% block style_custom %}
    <style>
        .profil{
            background: #f9f9f9;
        }
        .profil .ul-caracteristiques li {
            width:25%;
        }
        .div-cadre-orange{
            background: #fff;
            border-radius: 10px;
            border: 1px solid rgba(0, 0, 0, 0.125);
            overflow: hidden;
            float: left;
            width: 100%;
            margin: 15px 0px;
        }
        .cadre{
            float: left;
            width: 100%;
            position: relative;
            padding: 25px 30px 30px;
        }
        .margin-top--22{
            margin-top:-22px;
        }
        .div-cadre-orange h4{
            color: #FF9800;
        }
        .ul-caracteristiques img{
            width:20px;
            padding-right:5px;
        }
        .ul-caracteristiques {
            list-style: none;
            padding: 0;
            font-size: 16px;
        }
        .ul-caracteristiques li {
            padding: 6px 0;
            font-size: 15px;
            display: table;
            height: 100%;
            line-height: 21px;
            float: left;
            width: 50%;
            margin-bottom: 5px;
        }
        .label-custom{
            position: absolute;
            font-size: 0.8em;
            top: 8px;
        }
        .label-custom.label-price{
            top:2px;
            left:30%
        }
        .ul-caracteristiques li{
            position:relative;
            display:flex!important;
            justify-content:center;

        }

    </style>
{% endblock %}
{% block body %}
    {% for message in app.flashes('success')  %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="slider">
                <h1>{{ property.title }}</h1>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div style="    border-radius: 0.25rem;" class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="height: 290px" src="{{ property.image }}"
                                 alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="height: 290px" src="{{ property.image }}"
                                 alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="height: 290px" src="{{ property.image }}"
                                 alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="div-cadre-orange">
                <div class="cadre">
                    <div class="cadre margin-top--22">
                        <h4 class="pb-3">Description</h4>
                        <p>
                        <p>{{ property.description }}</p></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="div-cadre-orange">
                <div class="cadre">
                    <h4 class="pb-3">Caracteristiques du bien</h4>
                    <ul class="ul-caracteristiques ">
                        <li>
                            <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                 style="padding: 10px;min-width: 90%;">
                                <label class="label-custom">Chaufage:</label>
                                <i class="fas fa-thermometer-half mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                <span class="vertical-align-mid">{% if property.heat == 1 %} Electrique {% else %} Gaz {% endif %}</span>
                            </div>

                        </li>
                        <li>

                            <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                 style="padding: 10px;min-width: 90%;">
                                <label class="label-custom">Superficie:</label>
                                <i class="fas fa-home mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                <span class="vertical-align-mid">{{ property.surface }} m²</span>
                            </div>
                        </li>


                        <li>
                            <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                 style="padding: 10px;min-width: 90%;">
                                <label class="label-custom">Nombre de chambres:</label>
                                <i class="fas fa-bed mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                <span class="vertical-align-mid">{{ property.bedrooms }}</span>
                            </div>
                        </li>
                        <li>
                            <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                 style="padding: 10px;min-width: 90%;">
                                <label class="label-custom">Type:</label>

                                <i class="fab fa-fort-awesome mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                <span class="vertical-align-mid">  {% if property.type == 1 %}Maison{% else %}Appartement{% endif %}</span>
                            </div>
                        </li>
                        {% if property.type !=1 %}
                            <li>
                                <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                     style="padding: 10px;min-width: 90%;">
                                    <label class="label-custom">Nombre d'etages:</label>
                                    <i class="fas fa-building mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                    <span class="vertical-align-mid">{{ property.floor }}</span>
                                </div>
                            </li>
                        {% endif %}
                        <li>
                            <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                 style="padding: 10px;min-width: 90%;">
                                <label class="label-custom">Garage:</label>
                                <i class="fas fa-warehouse mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                <span class="vertical-align-mid">{% if property.garage %}Oui {% else %}Non{% endif %}</span>
                            </div>
                        </li>
                    </ul>
                    <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                         style="padding: 10px;min-width: 100%; position: relative">
                        <label class="label-custom label-price">Prix:</label>
                        <i class="fas fa-dollar-sign mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                        <span class="vertical-align-mid" style="font-size: 2em">{{ property.formatedPrice }} €</span>
                    </div>
                </div>
            </div>
            <div class="div-cadre-orange">
                <div class="cadre">
                    <h4 class="pb-3">Localisation</h4>
                    <ul class="ul-caracteristiques">
                        <li>
                            <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                 style="padding: 10px;min-width: 90%;">
                                <label class="label-custom">Code postale:</label>
                                <i class="fas fa-map-marker-alt mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                <span class="vertical-align-mid">{{ property.postalCode }} </span>
                            </div>
                        </li>
                        <li>
                            <div class="badge badge-primary d-inline-flex align-items-center d-flex justify-content-around"
                                 style="padding: 10px;min-width: 90%;">
                                <label class="label-custom">Ville</label>
                                <i class="fas fa-map-marker-alt mr-md-3 mr-sm-1" style="font-size: 2.5em"></i>
                                <span class="vertical-align-mid">{{ property.city }} </span>
                            </div>
                        </li>
                    </ul>
                    <iframe style="border: 0;"
                            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2710.207049454749!2d-1.5729033!3d47.2125309!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4805ec0fcda6c4cb%3A0xd620ca38dafa1e9a!2s2+Rue+La+Motte+Picquet%2C+44100+Nantes!5e0!3m2!1sfr!2sfr!4v1423244007186"
                            width="100%" frameborder="0"></iframe>

                </div>
            </div>
            <div class="div-cadre-orange">
                <div class="cadre">
                    <h4 class="pb-3">Contactez nous !</h4>
                </div>
            </div>
        </div>
    </div>
{% endblock %}